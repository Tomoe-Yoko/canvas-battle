generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  supabaseUserId String    @unique @map("supabase_user_id")
  name           String
  email          String    @unique
  monsters       Monster[]
  battles        Battle[]
}

model Monster {
  id                Int      @id @default(autoincrement())
  userId            Int
  name              String
  thumbnailImageKey String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])

  yourBattles  Battle[] @relation("YourMonster")
  enemyBattles Battle[] @relation("EnemyMonster")
}

model Battle {
  id        Int      @id @default(autoincrement())
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  monsterId Int
  monster   Monster  @relation("YourMonster", fields: [monsterId], references: [id])
  enemyId   Int?
  enemy     Monster? @relation("EnemyMonster", fields: [enemyId], references: [id])
  result    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

