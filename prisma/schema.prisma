generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  monsters Monster[]
  battles  Battle[]
}

model Monster {
  id     Int     @id @default(autoincrement())
  name   String?
  userId Int
  User   User    @relation(fields: [userId], references: [id])

  battles Battle[]
}

model Battle {
  id        Int     @id @default(autoincrement())
  userId    Int
  User      User    @relation(fields: [userId], references: [id])
  monsterId Int
  monster   Monster @relation(fields: [monsterId], references: [id])
  enemyId   Int?
  result    String?
}

